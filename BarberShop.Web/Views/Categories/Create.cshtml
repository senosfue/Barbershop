@model Category
@{
    ViewData["Title"] = "Crear Una Categoria";
}
<div class="pagetitle">
    <h1>Categorias</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">DashBoard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Categorias</a></li>
            <li class="breadcrumb-item active">Nueva Categoria</li>
        </ol>
    </nav>
</div>
<section class="category dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-bg-primary">Nueva Categoria</h5>
            <!-- Floating Labels Form -->
            <form class="row g-3" asp-action="Create" method="POST">
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="CategoryName" class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.CategoryName)">
                        <label asp-for="CategoryName"></label>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingName" placeholder="Descripcion">
                        <label for="floatingEmail">Descripcion</label>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>


            </form><!-- End floating Labels Form -->
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}