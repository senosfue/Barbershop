@model AppointmentDTO
@{
    ViewData["Title"] = "añadir Cita";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Citas</a></li>
            <li class="breadcrumb-item active">Editar Cita</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card-body">
        <h5 class="m-2 font-weight-bold col-md-11" style="font-family: 'Roboto', sans-serif; color: #000000; font-style: italic; padding: 10px">Editar Cita</h5>


        <form class="row g-3" asp-action="Edit" method="POST">
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Time" class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.Time)">
                    <label asp-for="Time"></label>
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <select asp-for="IdHaircut" asp-items="Model.Haircuts" class="form-control"></select>
                    <label asp-for="IdHaircut"></label>
                    <span asp-validation-for="IdHaircut" class="text-danger"></span>
                </div>
            </div>




            <div class="text-center">
                <button type="submit" class="btn btn-primary" style="background-color: red; border-color: white">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary" style="background-color: black; border-color: black; color: white;">Volver</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}